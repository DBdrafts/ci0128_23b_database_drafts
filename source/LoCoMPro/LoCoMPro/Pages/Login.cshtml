@page
@model LoCoMPro.Pages.LoginModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/css/SharedStyles.css">
    <link rel="stylesheet" href="styles.css">
    <script src="~/js/Login.js"></script>
</head>
<body>
    <div class="logo-image">
        <img src="~/img/LoCoMProLogo.svg" alt="LoCoMPro Logo">
    </div>
    <div class="login-section">
        <form>
            <div id='inises'>Iniciar Sesión</div>
            <label for="email">Correo Electrónico</label>
            <input type="text" id="email" name="Email" placeholder="usuario@gmail.com" required>

            <label for="psw">Contraseña</label>
            <input type="password" id="psw" name="Contraseña" placeholder="Contraseña" required>
            <input type="checkbox" onclick="shwPass()">Mostrar Contraseña

            <button id="login" type="submit">Iniciar Sesión</button>
            <div id="forgotpsw"><a href="">¿Has olvidado tu contraseña?</a></div>
        </form>
    </div>
    <div class="noacc-section">
        <div id="separator"></div>
        <div style="text-align: center">¿No te has registrado?</div>
        <a asp-area="" asp-page="/createacc">
            <button id="register">Registrarse</button>
        </a>
    </div>
</body>
</html>
