@page
@model LoCoMPro.Pages.CreateAccModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Cuenta</title>
    <link rel="stylesheet" href="~/css/SharedStyles.css">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="logo-image">
        <img src="~/img/LoCoMProLogo.svg" alt="LoCoMPro Logo">
    </div>
    <div class="register-section">
        <form>
            <div id='CrAcc'>Crear Cuenta</div>
            <label for="email">Correo Electrónico</label>
            <input type="text" id="email" name="Email" placeholder="usuario@gmail.com" required>

            <label for="usr">Nombre de Usuario</label>
            <input type="text" id="usr" name="Usuario" placeholder="Usuario" required>

            <label for="psw">Contraseña</label>
            <input type="text" id="psw" name="Contraseña" required>

            <label for="conpsw">Confirmar Contraseña</label>
            <input type="text" id="conpsw" name="ConfirmContraseña" required>

            <button class="button-general" id="register" type="submit">Registrarse</button>
        </form>
    </div>
    <div class="hasacc-section">
        <div id="separator"></div>
        <div style="text-align: center">¿Ya te has registrado?</div>
        <a asp-area="" asp-page="/login">
            <button class="button-general" id="login">Iniciar Sesión</button>
        </a>
    </div>
</body>
</html>
