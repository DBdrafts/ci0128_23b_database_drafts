@page
@model LoCoMPro.Pages.ProductPageModel
@{
    ViewData["Title"] = "SearchProduct";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset=utf-8 />
    <title>Product Visualization</title>
    <link rel="stylesheet" href="~/css/SharedStyles.css" />
</head>

<body>
    <!-- Name of product requested -->
    <div class="titleProduct">
        @Model.requestedProductName
    </div>

    <!-- Section for columns of specifications from requested product -->
    <div class="container">
        @{ // select the first matches
            var firstNonNullProduct = Model.Product.FirstOrDefault(r => r.Name != null);
            var firstNonNullStore = Model.Store.FirstOrDefault(r => r.Name != null);
        }
        <!-- brand column -->
        <div class="column">
            <h2>Marca</h2>
            @{
                if (firstNonNullProduct != null)
                {
                    <p>@firstNonNullProduct.Brand</p>
                }
            }
        </div>

        <!-- model column -->
        <div class="column">
            <h2>Modelo</h2>
            @{
                if (firstNonNullProduct != null)
                {
                    <p>@firstNonNullProduct.Model</p>
                }
            }
            </div>

        <!-- establishment column -->
        <div class="column">
            <h2>Establecimiento</h2>
            @{
                if (firstNonNullStore != null)
                {
                    <p>@firstNonNullStore.Name</p>
                }
            }
        </div>

        <!-- cantón column -->
        <div class="column">
            <h2>Cantón</h2>
            @{
                if (firstNonNullStore != null)
                {
                    <p>@firstNonNullStore.CantonName</p>
                }
            }
        </div>

        <!-- province column -->
        <div class="column">
            <h2>Provincia</h2>
            @{
                if (firstNonNullStore != null)
                {
                    <p>@firstNonNullStore.ProvinciaName</p>
                }
            }
        </div>

    </div>
    
    <!-- Horizontal separating line -->
    <hr class="style-four">

    <!-- Code for register list in the page -->
    <!-- Name of product requested -->
    <div class="titleListRegister">
        Lista de registros
    </div>

    <!-- Container for column options -->
   <nav>
