@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidó su contraseña?";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>¿Olvidó su contraseña?</title>
    <link rel="stylesheet" href="styles.css">
</head>

<div class="logo-image">
    <img src="~/img/LoCoMProLogo.svg" alt="LoCoMPro Logo">
</div>

<div class="email-section">
    <form class="form-input" method="post">
        <div id='forgPsw'>¿Olvidó su contraseña?</div>

            <label asp-for="Input.Email">Ingrese su correo electrónico</label>
            <input asp-for="Input.Email" class="form-control" placeholder="usuario@gmail.com" autocomplete="username" style="border-radius: 15px;
                    border: 2px black solid; margin-bottom: 8px; margin-top: 5px" aria-required="true">
            @* <span asp-validation-for="Input.Email" class="text-danger"></span> *@

        <button id="sendEmail" type="submit">Enviar correo de recuperación</button>
    </form>
</div>
